{
  "name": "nodejs-service",
  "version": "1.0.0",
  "description": "Boilerplate to start your first nodejs webapp",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "prestart": "npm run build",
    "dev": "nodemon",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "prod": "npm run start",
    "test": "NODE_ENV=test mocha --timeout 5000 --exit --reporter spec --require ts-node/register -r tsconfig-paths/register 'test/**/*.test.ts'",
    "coverage": "nyc --reporter html --reporter text npm test",
    "lint": "tslint src/**/*.ts"
  },
  "keywords": [
    "nodejs",
    "gcloud"
  ],
  "author": "maybeyou",
  "license": "ISC",
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@types/chai-http": "^3.0.5",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "express": "^4.17.3",
    "helmet": "^3.15.1",
    "joi": "^14.3.1",
    "mongoose": "^5.4.12",
    "nconf": "^0.10.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/compression": "0.0.36",
    "@types/express": "^4.16.1",
    "@types/helmet": "0.0.42",
    "@types/joi": "^14.3.1",
    "@types/mocha": "^5.2.6",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/mongoose": "^5.3.17",
    "@types/nconf": "^0.10.0",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^7.0.6",
    "@types/sinon-mongoose": "^1.3.9",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "mocha": "^5.2.0",
    "mongodb-memory-server": "^3.1.1",
    "nyc": "^14.1.1",
    "proxyquire": "^2.1.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.3",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.3"
  }
}
